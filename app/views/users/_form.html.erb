<div class="col-md-6 col-md-offset-3 account-table">
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/users_error_messages' %>
      
    <%= f.label :name, class: "label-form" %>
    <%= f.text_field :name, class: "form-control" %>
      
    <%= f.label :email, class: "label-form" %>
    <%= f.email_field :email, class: "form-control" %>
      
    <%= f.label :department, class: "label-form" %>
    <%= f.text_field :department, class: "form-control" %>
      
    <%= f.label :password（半角英数字記号をそれぞれ1種類以上含めてください）, class: "label-form" %>
    <%= f.password_field :password, class: "form-control" %>
      
    <%= f.label :password_confirmation, class: "label-form" %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
      
    <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-signup" %>
      
  <% end %>
</div>