<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if logged_in? %>
      <%= link_to "勤怠システム", current_user, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "トップへ", current_user %></li>
          <% if current_user.admin? %>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "基本勤怠情報の更新", basic_info_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= @current_user.name %> <b class="caret"></b>
            </a>
              <ul class="dropdown-menu">
                <li><%= link_to "ユーザー情報の更新", edit_user_path(current_user) %></li>
                <li><%= link_to "勤怠情報", current_user %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "ログアウト", logout_path, method: :delete %>
                </li>
              </ul>
           </li>
        </ul>
      </nav>
    <% else %>
      <%= link_to "勤怠システム", root_path, id: "logo" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        </ul>
      </nav>
    <% end %>
     
  </div>
</header>